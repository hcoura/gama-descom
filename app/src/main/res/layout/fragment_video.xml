<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <fragment
        android:id="@+id/youtube_player"
        android:name="com.google.android.youtube.player.YouTubePlayerSupportFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/module_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="01"
            android:layout_margin="8dp"/>

        <TextView
            android:id="@+id/module_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Resumo para o ENEM: P.A"
            android:layout_toEndOf="@id/module_number"
            android:layout_toRightOf="@id/module_number"
            android:layout_margin="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/module_number"
            android:layout_toEndOf="@id/module_number"
            android:layout_below="@id/module_title"
            android:text="PROFESSOR - 04 vídeos"
            android:layout_margin="8dp"
            />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#ddd">

            <TextView
                android:id="@+id/video_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="01.1"
                android:layout_margin="8dp"/>

            <TextView
                android:id="@+id/video_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Resumo para o ENEM: Conceitos Gerais de P.A"
                android:layout_toEndOf="@id/video_number"
                android:layout_toRightOf="@id/video_number"
                android:layout_margin="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/video_number"
                android:layout_toEndOf="@id/video_number"
                android:layout_below="@id/video_title"
                android:text="ASSISTINDO AGORA"
                android:layout_margin="8dp"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#ddd">

            <TextView
                android:id="@+id/next_video_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="01.2"
                android:layout_margin="8dp"/>

            <TextView
                android:id="@+id/next_video_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Resumo para o ENEM: Exercícios de P.A"
                android:layout_toEndOf="@id/next_video_number"
                android:layout_toRightOf="@id/next_video_number"
                android:layout_margin="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/next_video_number"
                android:layout_toEndOf="@id/next_video_number"
                android:layout_below="@id/next_video_title"
                android:text="Próxima Aula"
                android:layout_margin="8dp"
                />
        </RelativeLayout>

    </LinearLayout>

    <Button
        android:id="@+id/change_page_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="VideoComplete"/>

</LinearLayout>